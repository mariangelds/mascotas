<% content_for :title do %>Contacto<% end %> 
<h3>Contacto</h3>
<div class="form"> 
<%= simple_form_for @contacto do |form| %> 
<%= form.error_notification %>
<%= form.input :nombre, autofocus: true %> 
<%= form.input :email %> 
<%= form.input :mensaje, as: :text %> 
<%= form.button :submit, 'enviar', class: 'submit' %> 
<% end %> 
</div> 
